{erl_opts, [debug_info]}.
{deps, [
    {erlport, "0.9.8"},
    {cowboy, "2.0.0"},
    {jsx, "2.8.1"},
    {yamerl, "0.6.0"}
    ]}.
{shell, [{apps, [roh]}]}.


{extra_src_dirs, ["python_scripts"]}.

{relx, [
    {vm_args, "config/vm.args"},
%%    {sys_config, "config/sys.config"},
    {release, {roh, "0.0.1"}, [roh]},
    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true},
    {overlay, [{copy, "python_scripts", "python_scripts"}]}
]
}.

{profiles, [
    {prod, [{relx, [{dev_mode, false},
        {include_erts, true}]}]},
    {test, [
        {deps, [meck]},
        {erl_opts, [debug_info]}
    ]}
]
}.